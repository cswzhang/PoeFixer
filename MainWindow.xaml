<Window
    x:Class="PoeFixer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PoeFixer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PoeFixer"
    Width="1000"
    Height="440"
    Background="#F5F5F5"
    Icon="./cigar.ico"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Margin"
                    Value="0,2"/>
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin"
                    Value="0,2"/>
            <Setter Property="Padding"
                    Value="5,1"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Padding"
                    Value="5,2"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#CCCCCC"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <Menu Background="#F5F5F5"
              DockPanel.Dock="Top">
            <Button
                Click="PatchGGPK"
                Content="应用"/>
            <Button Click="RestoreExtractedAssets"
                    Content="恢复"/>
            <!-- <MenuItem Header="_File">
                <MenuItem Header="_Select GGPK" Click="SelectGGPK"/>
                <MenuItem Header="_Patch GGPK" Click="PatchGGPK"/>
                <Separator/>
                <MenuItem Header="_Restore Vanilla Assets" Click="RestoreExtractedAssets"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Window_Closing"/>
            </MenuItem>-->
        </Menu>

        <!--  Main Content  -->
        <Grid x:Name="mainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--  Game Settings  -->
            <StackPanel
                x:Name="settingsPanel"
                Grid.Row="0"
                Margin="10,5,10,0">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Game Settings"/>

                <UniformGrid Margin="0,0,0,10"
                             Columns="3">
                    <GroupBox
                        Margin="5"
                        Padding="10"
                        Header="Camera">
                        <StackPanel>
                            <DockPanel x:Name="settingsPanel1">
                                <CheckBox
                                    x:Name="zoomEnabled"
                                    VerticalAlignment="Center"
                                    Content="Zoom"/>
                                <Slider
                                    x:Name="zoomSlider"
                                    Width="120"
                                    Margin="5,0"
                                    AutoToolTipPlacement="TopLeft"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.2"
                                    Maximum="3"
                                    Minimum="1"
                                    SmallChange="0.2"
                                    TickFrequency="0.2"
                                    TickPlacement="BottomRight"
                                    Value="1"/>
                            </DockPanel>
                            <CheckBox x:Name="removeFog"
                                      Content="移除雾气 (From Zoom)"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                        Margin="5"
                        Padding="10"
                        Header="Visual Effects">
                        <StackPanel x:Name="settingsPanel2">
                            <CheckBox x:Name="removeShadows"
                                      Content="移除光线阴影"/>
                            <!-- <DockPanel> -->
                            <CheckBox x:Name="colorModsEnabled"
                                      Content="改色"/>
                            <Button
                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                Padding="2,1"
                                Click="OnEditColorMods"
                                Content="..."/>
                            <!-- </DockPanel> -->
                            <CheckBox x:Name="removeParticles"
                                      Content="移除粒子效果"/>
                            <CheckBox x:Name="removeLight"
                                      Content="移除黑暗（包括矿坑）"/>
                            <CheckBox x:Name="removeBloom"
                                      Content="Remove Bloom"/>
                            <CheckBox x:Name="removeDelirium"
                                      Content="移除迷雾"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                        Margin="5"
                        Padding="10"
                        Header="Gameplay">
                        <StackPanel x:Name="settingsPanel3">
                            <CheckBox x:Name="revealEnabled"
                                      Content="揭示小地图"/>
                            <CheckBox x:Name="removeLoadingScreen"
                                      Content="黑屏（脚本用）"/>
                            <CheckBox x:Name="removeCorpses"
                                      Content="移除尸体"/>
                            <CheckBox x:Name="removeShatter"
                                      Content="Remove Shatter"/>
                            <CheckBox x:Name="replaceMtx"
                                      Content="替换技能特效（未开发完成）"/>
                            <CheckBox x:Name="removeGoblins"
                                      Content="Remove Goblins"/>
                        </StackPanel>
                    </GroupBox>
                </UniformGrid>
            </StackPanel>

            <!--  Status Bar  -->
            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#BDBDBD"
                BorderThickness="0,1,0,0">
                <TextBox
                    x:Name="Console"
                    Height="55"
                    Padding="10,5"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Consolas"
                    FontSize="11"
                    Foreground="Black"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
